{
    "name": "your-vendor/igaming-lib",
    "description": "Framework-agnostic PHP library for common iGaming functionalities (RTP, Rollover, Validations, etc)",
    "type": "library",
    "keywords": [
        "igaming",
        "gaming",
        "rtp",
        "rollover",
        "betting",
        "casino",
        "gambling",
        "php",
        "framework-agnostic"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "pestphp/pest": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "IGamingLib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IGamingLib\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
